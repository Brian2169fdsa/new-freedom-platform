rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // User profile pictures: owner can read/write, anyone can read
    match /profile_pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // User documents (Document Vault): owner and staff only
    match /documents/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        request.auth.token.role in ['admin', 'case_manager', 'super_admin']
      );
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024;
    }

    // Post media (Lane 3 social feed): authed users can upload, anyone can read
    match /post_media/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*|video/.*');
    }

    // Chat attachments: authed users only
    match /chat_media/{conversationId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024;
    }

    // Course content (admin uploads only, all authed users can read)
    match /course_content/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.token.role in ['admin', 'super_admin'];
    }
  }
}
