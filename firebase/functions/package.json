{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "preDeployTest": "cross-env GOOGLE_APPLICATION_CREDENTIALS=src/tests/newfreedom_service_account_key.json vitest run --retry=10 --coverage --testTimeout=20000",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "cross-env GOOGLE_APPLICATION_CREDENTIALS=src\\tests\\newfreedom_service_account_key.json vitest run --retry=10",
    "coverage": "cross-env GOOGLE_APPLICATION_CREDENTIALS=src\\tests\\newfreedom_service_account_key.json vitest run --retry=10 --coverage",
    "test:watch": "cross-env GOOGLE_APPLICATION_CREDENTIALS=src\\tests\\newfreedom_service_account_key.json vitest --retry=10"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@openai/agents": "^0.4.15",
    "@openai/agents-extensions": "^0.4.15",
    "ai": "^6.0.0",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^6.0.1",
    "uuid": "^9.0.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@anatine/zod-mock": "^3.13.3",
    "@faker-js/faker": "^8.4.1",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vitest/coverage-v8": "^1.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.9.3",
    "vitest": "^1.3.1"
  },
  "private": true
}
